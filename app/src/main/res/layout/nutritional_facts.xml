<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nutritional_facts_title"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <include
        android:id="@+id/nutritional_facts_item_fat"
        layout="@layout/nutritional_facts_item" />

    <include
        android:id="@+id/nutritional_facts_item_gras"
        layout="@layout/nutritional_facts_item" />

    <include
        android:id="@+id/nutritional_facts_item_sugar"
        layout="@layout/nutritional_facts_item" />

    <include
        android:id="@+id/nutritional_facts_item_salt"
        layout="@layout/nutritional_facts_item" />

</LinearLayout>