<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plat"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
            android:id="@+id/TPois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petit pois et carottes"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/plat"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"

            />
        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cassegrain"
            app:layout_constraintTop_toBottomOf="@+id/TPois"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nutri_score_e"
        app:layout_constraintLeft_toRightOf="@id/TPois"
        app:layout_constraintTop_toBottomOf="@+id/plat"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/codeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code Barres :"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tcodebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/codeB"
        android:text="3039388343747"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuantitÃ© :"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/codeB"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tquantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="dygycdn"
        app:layout_constraintLeft_toRightOf="@+id/quantite"
        app:layout_constraintTop_toBottomOf="@+id/tcodebar" />

    <TextView
        android:id="@+id/vendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendu en:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tquantite"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="France,Japon,Suisse"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/vendu"
        app:layout_constraintTop_toBottomOf="@+id/tquantite" />

    <TextView
        android:id="@+id/ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredient :"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/vendu"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="France"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/ingredient"
        app:layout_constraintTop_toBottomOf="@+id/tvendu" />

    <TextView
        android:id="@+id/substances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Substances Allergenes :"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ingredient"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tsubstances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="France"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/substances"
        app:layout_constraintTop_toBottomOf="@+id/tingredient" />

    <TextView
        android:id="@+id/additifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additifs :"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/substances"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tadditifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Aucune"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/additifs"
        app:layout_constraintTop_toBottomOf="@+id/substances" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_droite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="TPois,subTitle"
        app:barrierDirection="right" />





</androidx.constraintlayout.widget.ConstraintLayout>

